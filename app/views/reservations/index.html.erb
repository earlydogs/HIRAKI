<%= render partial: 'shared/navbar' %>

<div class="container mt-5">
  <h1 class="text-center mb-4">宿泊状況確認ページ</h1>

  <div class="row">
    <% 3.times do |i| %>
      <div class="col-lg-4 col-md-12">
        <%= month_calendar(attribute: :date, start_date: Date.today.next_month(i).beginning_of_month) do |date| %>
          <%= content_tag :div, class: "day-box" do %>
            <%= date.day %>
            <br>
            <% if true # ここに宿泊予約が空いているかどうかの条件式を追加してください %>
              <%= link_to "○", "#" %>
            <% else %>
              予約不可
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
